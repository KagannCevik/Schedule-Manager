@model List<Project8DayAndNight.Entities.Event>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Etkinlikler</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #f4f6fb;
            font-family: 'Segoe UI', sans-serif;
        }

        .event-date-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: #2563eb;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        .event-row {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .event-card-modern {
            flex: 1 1 320px;
            min-width: 320px;
            max-width: 400px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(37, 99, 235, 0.08);
            padding: 1.5rem 1.25rem 1.25rem 1.25rem;
            position: relative;
            border-left: 8px solid var(--event-color, #2563eb);
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .event-card-modern:hover {
                transform: translateY(-4px) scale(1.02);
                box-shadow: 0 8px 24px rgba(37, 99, 235, 0.15);
            }

        .event-title-modern {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #22223b;
        }

        .event-time-modern {
            font-size: 0.95rem;
            color: #6b7280;
            margin-bottom: 0.5rem;
        }

        .event-category-modern {
            display: inline-block;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            background: var(--event-color, #2563eb);
            color: #fff;
            margin-bottom: 0.5rem;
        }

        .event-actions {
            position: absolute;
            top: 1.25rem;
            right: 1.25rem;
            display: flex;
            gap: 0.5rem;
        }

            .event-actions .btn {
                border-radius: 50%;
                width: 32px;
                height: 32px;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 0;
            }

        .add-event-btn-modern {
            background: linear-gradient(90deg, #2563eb 0%, #00c6fb 100%);
            color: #fff;
            border: none;
            border-radius: 30px;
            padding: 0.7rem 2rem;
            font-weight: 600;
            font-size: 1.1rem;
            box-shadow: 0 4px 16px rgba(37, 99, 235, 0.12);
            transition: background 0.2s;
        }

            .add-event-btn-modern:hover {
                background: linear-gradient(90deg, #1e40af 0%, #00b4d8 100%);
            }
    </style>
</head>
<body>

    <!-- NAVBAR BAŞLANGIÇ -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">
                <i class="fa-regular fa-calendar-days me-2"></i> Takvim Uygulaması
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Default/Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">İletişim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Default/Index2">Takvim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- NAVBAR BİTİŞ -->

    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold mb-0"><i class="fa-regular fa-calendar-days me-2"></i> Etkinlikler</h2>
            <a href="#" class="btn btn-outline-primary"><i class="fa fa-filter me-1"></i> Filtrele</a>
        </div>
        @{
            string currentDate = "";
        }
        @foreach (var group in Model.GroupBy(e => e.StartDate.ToString("dd.MM.yyyy")))
        {
            <div class="event-date-title">@group.Key</div>
            <div class="event-row">
                @foreach (var e in group)
                {
                    var color = e.Color ?? "#2563eb";
                    <div class="event-card-modern" style="--event-color: @color;">
                        <div class="event-actions">
                            <button class="btn btn-outline-primary btn-sm" title="Düzenle">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-danger btn-sm" title="Sil" onclick="deleteEvent(@e.EventId, this)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                        <div class="event-title-modern">@e.Title</div>
                        <div class="event-time-modern">
                            <i class="far fa-clock me-1"></i>
                            @e.StartDate.ToString("dd.MM.yyyy HH:mm") - @e.EndDate.ToString("dd.MM.yyyy HH:mm")
                        </div>
                        <span class="event-category-modern">
                            <i class="@GetCategoryIcon(e.CategoryId) me-1"></i>
                            @(e.Category != null ? e.Category.Name : "Kategori Yok")
                        </span>
                    </div>
                }
            </div>
        }
        <div class="text-center mt-5">
            <button class="add-event-btn-modern">
                <i class="fas fa-plus me-2"></i> Yeni Etkinlik Ekle
            </button>
        </div>
    </div>

    @functions {
        string GetCategoryIcon(int categoryId)
        {
            switch (categoryId)
            {
                case 1: return "fas fa-users";
                case 2: return "fas fa-laptop-code";
                case 3: return "fas fa-umbrella-beach";
                default: return "fas fa-calendar";
            }
        }
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteEvent(eventId, btn) {
            if (confirm('Bu etkinliği silmek istediğinize emin misiniz?')) {
                fetch('/Default/DeleteEvent', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'id=' + eventId
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            const eventCard = btn.closest('.event-card-modern');
                            eventCard.style.opacity = '0.5';
                            setTimeout(() => eventCard.remove(), 300);
                        } else {
                            alert('Silme işlemi başarısız!');
                        }
                    });
            }
        }
    </script>
</body>
</html>