@model List<Project8DayAndNight.Entities.Department>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
          <table class="table table-bordered">
              <tr>

                  <th>#</th>
                  <th>Departman Adı</th>
                  <th>Sil</th>
                  <th>Güncelle</th>

              </tr>
              @foreach (var item in Model)
              {
                  <tr>
                      <td>@item.DepartmentId</td>
                      <td>@item.DepartmentIName</td>
                      <td><a href="/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-danger">Sil</a></td>
                      <td><a href="/Department/UpdateDepartment/@item.DepartmentId" class="btn btn-info">Güncelle</a></td>
                  </tr>
              }
          </table>
    <a href="/Department/CreateDepartment/" class="btn btn-info">Yeni Departman Girişi</a>
</div>